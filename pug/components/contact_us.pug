                    i(class="fa-brands fa-whatsapp")
            if media.title == "Facebook"
                a(target="_blank" href=media.link class="contact_us__social_media--link contact_us__social_media--facebook") 
                    h3= media.title
                    i(class="fa-brands fa-facebook")
            

