        each media in social_media
            if media.title == "Instagram"
                a(target="_blank" href=media.link class="contact_us__social_media--link contact_us__social_media--instagram") 
                    h3= media.title
                    i(class="fa-brands fa-instagram")
            if media.title == "Whatsapp"
                a(target="_blank" href=media.link class="contact_us__social_media--link contact_us__social_media--whatsapp") 
